<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:GestureLock="http://schemas.android.com/apk/res-auto"
    android:fitsSystemWindows="true"
    android:background="@android:color/white">

    <com.zhoutianchu.framework.view.GestureLock
        android:id="@+id/gesture_lock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        GestureLock:line_normal_color="@color/colorGestureNormal"
        GestureLock:line_width="5dp"/>

    <include layout="@layout/title_common"/>

</android.support.constraint.ConstraintLayout>